<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<job id="uploadedDocRipperJob" xmlns="http://www.springframework.org/schema/batch">


		<step id="uploadedDocRipperStep">
			<tasklet transaction-manager="transactionManager">
				<chunk reader="uploadedDocItemReader" writer="uploadedDocWriter" commit-interval="100" skip-limit="10" retry-policy="retryPolicy">
				<skippable-exception-classes>
						<include class="java.lang.Exception" />
						<include class="java.net.ConnectException" />
						<include class="java.lang.NullPointerException" />
					</skippable-exception-classes>	
				</chunk>
				<listeners>					
					<listener ref="retryListener" />
					<listener ref="defaultStepExecutionListener" />
				</listeners>
			</tasklet>
		</step>
	</job>	
	
	<bean id="uploadedDocQueryProvider" class="com.bfds.saec.batch.uploaded_doc_ripper.UploadedDocQueryProvider" />
	
	<bean id="uploadedDocItemReader" class="com.bfds.saec.batch.item.database.JpaItemReader">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
		<property name="queryProvider" ref="uploadedDocQueryProvider" />
		<property name="pageSize" value="100"></property>
	</bean>
	<bean id="uploadedDocWriter" class="com.bfds.saec.batch.uploaded_doc_ripper.UploadedDocWriter" />
</beans>

